@page "{id}"
@model ZyPanel.Areas.Co.Pages.Hall.StopModel
@{
    ViewBag.Title = "توقفات خط";
    var createUrl = Url.Page("", "Create");
}

<partial name="_Alert" model="Model.Alert" />

<div class="table-container my-3">
    <div class="table-container-header">
        <form method="GET">
            <input type="text" name="filter" class="form-control" placeholder="کد توقف...">
            <input type="hidden" value="1" name="p" class="form-control">
            <button type="submit" class="btn btn-outline-dark">
                جستجو...
            </button>
        </form>
    </div>
    <div class="table-responsive" id="dataList">
        <table class="table table-bordered table-striped">
            <caption class="table-caption">@Model.HallInfo</caption>
            <thead>
                <tr>
                    <th>#</th>
                    <th>عنصر مرتبط</th>
                    <th>شرح توقف</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.List.Any())
                {
                    foreach (var item in Model.List)
                    {
                        <tr>
                            <td>@item.Code</td>
                            <td>@item.Title</td>
                            <td>@item.Brief</td>
                        </tr>
                    }
                }
                else
                {
                    <tr data-span></tr>
                }
            </tbody>
        </table>
        <partial name="_Pagination" model='(Model.List.TotalPages)' />
    </div>
</div>